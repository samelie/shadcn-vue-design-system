{
  "name": "@adddog/shadcn-vue-design-system",
  "version": "0.0.2",
  "description": "A collection of reusable Vue 3 components built with Radix Vue and Tailwind CSS, following the shadcn/ui pattern",
  "keywords": [
    "vue",
    "vue3",
    "components",
    "ui",
    "design-system",
    "shadcn",
    "radix-vue",
    "tailwindcss",
    "typescript"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./components/*": "./src/components/*",
    "./lib/*": "./src/lib/*",
    "./styles.css": "./src/style/styles.css",
    "./postcss.config": "./postcss.config.cjs"
  },
  "files": [
    "src",
    "postcss.config.cjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "echo 'No build needed - distributing source code'",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp --yes --no-push --no-tag --release patch",
    "prepublishOnly": "pnpm run lint && pnpm run types",
    "prepack": "pnpm run prepublishOnly",
    "types": "vue-tsc --noEmit",
    "knip": "knip",
    "test": "vitest run"
  },
  "author": "Sam Elie <sam@add.dog>",
  "homepage": "https://github.com/samelie/shadcn-vue-design-system#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/samelie/shadcn-vue-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/samelie/shadcn-vue-design-system/issues"
  },
  "peerDependencies": {
    "@adddog/design-tokens": "*",
    "@internationalized/date": "^3.10.0",
    "@tanstack/vue-table": "^8.21.3",
    "@vueuse/core": "^13.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.546.0",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "vue": "^3.5.22"
  },
  "peerDependenciesMeta": {
    "@adddog/design-tokens": {
      "optional": false
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@adddog/build-configs": "workspace:*",
    "@adddog/config-defaults": "workspace:*",
    "@adddog/design-tokens": "workspace:*",
    "@adddog/eslint": "workspace:*",
    "@internationalized/date": "^3.10.0",
    "@rad/config": "workspace:*",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/vue-table": "^8.21.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vueuse/core": "^13.9.0",
    "bumpp": "^10.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.37.0",
    "lucide-vue-next": "^0.546.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.1.10",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.1"
  },
  "private": false,
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  }
}
